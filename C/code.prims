code{
bye HLT
	exit(0);
}code

#define next break
#define _dup push(tos)
#define _drop pop(&tos)

inner{
key KEY
	_dup;
	tos=getchar();
}inner

inner{
emit EMIT
	putchar(tos);
	_drop;
}inner

unary dup DUP _dup;
unary drop DROP _drop;
